<h2>News & Needs</h2>
<div class="col-md-offset-2 col-md-8">
  <form>
    <div>
      {{textarea class='new-post' value=new_content placeholder="What's up with you?"}}
    </div>
    <button class='add-post' type="submit" {{action 'create'}}>Post Update</button>
  </form>

  <ul class="recent-news">
    {{#each controller}}
      <li class="news-item">
        <div class='newsitem-avatar pull-left'>
          <img {{bind-attr src=profileImageUrl}}>
        </div>
        <div class='newsitem-content'>
          <div class='newsitem-header'>{{link-to user.fullname 'user.profile' user}} posted an update {{timeSincePosted}}</div>
          <div class='newsitem-text'>{{text}}</div>
        </div>
        <div class='newsitem-footer'></div>
      </li>
    {{/each}}
  </ul>
</div>